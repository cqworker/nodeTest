//jade
doctype html
html
    head
        meta(charset='utf-8')
        title Validation
        style
            include ../public/stylesheets/style.css
        script
            include ../public/javascripts/index.js
    body
        //图片处理或触发一次访问
        img(src="/images/foo.png")
        br
        if body
            for val,index in body
                p= index + " : "
                a= '是否启用:'
                input(type='checkbox',checked=val.is_valid)
                br
                a= '错误提示: '
                a= val.error_message
                br
                //a= val.description
                textarea= val.expression
                br
                a= '-----------------'
        else
            ul
                li= '该对象无Validation'




