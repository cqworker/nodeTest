//jade
doctype html
html
    head
        meta(charset='utf-8')
        title Login
        include ../public/static/head
    body
        h2 美洽实施
        form.bootstrap-frm
            a= '帐号: '
            input#name(type='text')
            br
            a= '密码: '
            input#pwd(type='text' value='0c3cc2b229a290c98e6b161a607f48d3')
            input#but(type='button' value='登录')
    script.
        $('#but').bind('click',function(){
            var name = $('#name').val();
            var pwd = $('#pwd').val();
            $.ajax({
                url:'/login/a',
                data:{
                    name:name,
                    pwd:pwd
                },
                type:'post',
                dataType:'json',
                success:function(data){
                    if(data.success){
                        alert(data.success)
                      window.location.href = '/';
                    }else{
                        alert(data.success)
                    }
                }
            })
        })
